# Whitelabel Token Platform Backend Configuration

# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/whitelabel_tokens
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters
JWT_EXPIRES_IN=24h

# Blockchain Configuration
BLOCKCHAIN_PROVIDER=http://localhost:8545
FABRIC_CCP_PATH=./config/connection-profile.json
FABRIC_WALLET_PATH=./wallet
FABRIC_IDENTITY=whitelabel-admin

# Payment Gateway Configuration
RAZORPAY_KEY_ID=rzp_test_your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# KYC Service Configuration
UIDAI_API_KEY=your_uidai_api_key
ITD_API_KEY=your_income_tax_api_key
AML_API_KEY=your_aml_monitoring_api_key

# Vault Partner Configuration
MMTC_PAMP_API_KEY=your_mmtc_pamp_api_key
MMTC_PAMP_API_SECRET=your_mmtc_pamp_api_secret
SAFEGOLD_API_KEY=your_safegold_api_key
AUGMONT_API_KEY=your_augmont_api_key

# Security Configuration
ENCRYPTION_KEY=your-32-character-encryption-key-here
BCRYPT_ROUNDS=12

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@whitelabel-tokens.com

# SMS Configuration (for OTP and notifications)
SMS_API_KEY=your_sms_api_key
SMS_SENDER_ID=WHITEL
SMS_API_URL=https://api.textlocal.in/send

# Cloud Storage Configuration (for documents)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=whitelabel-token-documents

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_for_error_tracking

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Multi-tenant Configuration
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000000
MAX_USERS_PER_TENANT=1000000

# API Rate Limits
API_RATE_LIMIT_WINDOW=15
API_RATE_LIMIT_MAX=1000

# Compliance Configuration
KYC_VERIFICATION_TIMEOUT_HOURS=24
AML_CHECK_ENABLED=true
FIU_REPORTING_ENABLED=true

# Business Logic Configuration
MIN_INVESTMENT_AMOUNT=1000
MAX_INVESTMENT_AMOUNT=10000000
TOKEN_FRACTIONAL_PRECISION=8
DEFAULT_VAULT_PROVIDER=MMTC_PAMP

# Mobile App Configuration
MOBILE_APP_VERSION=1.0.0
PUSH_NOTIFICATION_SERVICE=firebase
FIREBASE_SERVER_KEY=your_firebase_server_key

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Support Configuration
SUPPORT_EMAIL=support@whitelabel-tokens.com
SUPPORT_PHONE=+91-80-WHITELABEL
HELPDESK_URL=https://help.whitelabel-tokens.com

# Third-party Integrations
WEBHOOK_SECRET=your_webhook_secret_for_verification
API_VERSION=v1

# Development Configuration (only for development environment)
DEBUG=whitelabel:*
MOCK_PAYMENT_GATEWAY=false
MOCK_KYC_VERIFICATION=false
MOCK_VAULT_API=false

# Production Configuration (only for production environment)
SSL_ENABLED=true
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key
FORCE_HTTPS=true

# Load Testing Configuration (only for staging)
LOAD_TEST_MODE=false
LOAD_TEST_USERS=1000
LOAD_TEST_DURATION=3600

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=whitelabel-token-backups

# Monitoring Configuration
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics
MONITORING_ENABLED=true